@model Crud_Inventario.Models.MovInventario

@{
    ViewBag.Title = "Editar Movimiento";
}

<h2>Editar Movimiento</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        @TempData["Error"]
    </div>
}

@using (Html.BeginForm("Editar", "Movimientos", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="panel panel-warning">
        <div class="panel-heading">
            <h4>Información del Movimiento</h4>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <h4>Campos ID (No Editables)</h4>
            <hr />

            <div class="form-group">
                @Html.LabelFor(model => model.COD_CIA, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.COD_CIA, new { @class = "form-control", @readonly = "readonly" })
                    @Html.HiddenFor(model => model.COD_CIA)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.COMPANIA_VENTA_3, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.COMPANIA_VENTA_3, new { @class = "form-control", @readonly = "readonly" })
                    @Html.HiddenFor(model => model.COMPANIA_VENTA_3)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ALMACEN_VENTA, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ALMACEN_VENTA, new { @class = "form-control", @readonly = "readonly" })
                    @Html.HiddenFor(model => model.ALMACEN_VENTA)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TIPO_MOVIMIENTO, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.TIPO_MOVIMIENTO, new { @class = "form-control", @readonly = "readonly" })
                    @Html.HiddenFor(model => model.TIPO_MOVIMIENTO)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TIPO_DOCUMENTO, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.TIPO_DOCUMENTO, new { @class = "form-control", @readonly = "readonly" })
                    @Html.HiddenFor(model => model.TIPO_DOCUMENTO)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NRO_DOCUMENTO, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.NRO_DOCUMENTO, new { @class = "form-control", @readonly = "readonly" })
                    @Html.HiddenFor(model => model.NRO_DOCUMENTO)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.COD_ITEM_2, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.COD_ITEM_2, new { @class = "form-control", @readonly = "readonly" })
                    @Html.HiddenFor(model => model.COD_ITEM_2)
                </div>
            </div>

            <h4>Campos Editables</h4>
            <hr />

            <div class="form-group">
                @Html.LabelFor(model => model.PROVEEDOR, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.PROVEEDOR, new { @class = "form-control", maxlength = "100" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ALMACEN_DESTINO, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ALMACEN_DESTINO, new { @class = "form-control", maxlength = "50" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CANTIDAD, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.CANTIDAD, new { @class = "form-control", type = "number" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DOC_REF_1, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.DOC_REF_1, new { @class = "form-control", maxlength = "50" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DOC_REF_2, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.DOC_REF_2, new { @class = "form-control", maxlength = "50" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DOC_REF_3, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.DOC_REF_3, new { @class = "form-control", maxlength = "50" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DOC_REF_4, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.DOC_REF_4, new { @class = "form-control", maxlength = "50" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DOC_REF_5, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.DOC_REF_5, new { @class = "form-control", maxlength = "50" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FECHA_TRANSACCION, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.FECHA_TRANSACCION, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-warning">
                        <i class="glyphicon glyphicon-floppy-disk"></i> Actualizar
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-default">
                        <i class="glyphicon glyphicon-arrow-left"></i> Volver al Listado
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}